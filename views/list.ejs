<%- include("header.ejs"); -%> 
<body>
  <div class="box" id="heading">
    <h1><%=Title%>
    </h1>
  </div>
  <div class="box it">
    <h2>Your To Do List :-</h2>
    <% for(var i=0;i<myTask.length;i++){ %>
      <div class="item">
        <input type="checkbox">
        <p>
          <%=myTask[i] %>
        </p>
      </div>
      <% } %>
      <form  class="item" action="/" method='POST'>
        <input type="text" id="work" name="Task" placeholder="New Task" autocomplete="off">
        <button type="submit" name="button" value=<%= Title %> >+</button>
      </form>
  </div>
 
</body>
